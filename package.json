{
  "name": "-t-ext",
  "private": true,
  "version": "0.0.1-beta",
  "productName": "(t)ext",
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON -c green,blue \"vite\" \"wait-on tcp:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "dev:web": "vite",
    "build": "tsc -b && vite build",
    "start": "electron .",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "electron:preview": "npm run build && electron ."
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.1.6",
    "framer-motion": "^11.3.24",
    "lucide-react": "^0.462.0",
    "markdown-it": "^14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "dev.matteocaputo.text",
    "productName": "(t)ext",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "electron/assets/icon.png"
    }
  }
}
